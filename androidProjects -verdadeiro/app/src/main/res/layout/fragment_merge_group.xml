<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MergeGroupFragment"
    android:background="#329d92">

    <!-- TODO: Update blank fragment layout -->









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:gravity="top|left"
        android:orientation="vertical"
        android:paddingTop="50dp">

    <EditText
        android:id="@+id/NomeCriarGrupo"
        android:layout_width="149dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/edit_text_shape2"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/NomeGrupo"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



        <CheckBox
            android:id="@+id/corridaCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Corrida" />

        <CheckBox
            android:id="@+id/CaminhadaCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Caminhada" />

        <Button
            android:id="@+id/buttonCriar"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/button_border"
            android:text="Criar"
            android:textColor="@color/whiteLetters"
            android:textSize="16sp" />

        <Button
            android:id="@+id/MeusGrupos"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-110dp"
            android:background="@drawable/button_border"
            android:text="Meus Grupos"
            android:textColor="@color/whiteLetters"
            android:textSize="16sp" />







    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Procurar por Nome ou Desporto"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/NomeGrupo"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NomeGrupo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_border"
        android:text="Procurar"
        app:layout_constraintBaseline_toBaselineOf="@+id/NomeGrupo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/NomeGrupo" />

</RelativeLayout>