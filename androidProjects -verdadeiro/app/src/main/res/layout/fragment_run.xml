<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329d92"
    tools:context=".RunFragment">

    <TableLayout
        android:id="@+id/myTable"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="0dp"
        android:background="#329d92"
        android:stretchColumns="0,1,2">

        <TableRow
            android:background="#80000000"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dataTextView"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/Data"
                android:textAlignment="center"
                android:textColor="@color/whiteLetters"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/duracaoTextView"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/Duracao"
                android:textAlignment="center"
                android:textColor="@color/whiteLetters"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distanciaTextView"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/Distancia"
                android:textColor="@color/whiteLetters"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:minHeight="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/firstValueData"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="20dip"
                android:text="10/01/2018"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/FirstValueDuration"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="20dip"
                android:text="15:00"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/firstValueDistance"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="20dip"
                android:text="30km"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/otherBackgroundTableRow"
            android:gravity="center_horizontal"
            android:minHeight="60sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/secondValueData"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="20dip"
                android:text="02/01/2018"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/secondValueDuration"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="20dip"
                android:text="23:05"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/secondValueDistance"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="20dip"
                android:text="15km"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/plusButtonLine1"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myTable"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_states"
        android:text="+"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/plusButtonLine2"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myTable"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/button_states"
        android:text="+"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>