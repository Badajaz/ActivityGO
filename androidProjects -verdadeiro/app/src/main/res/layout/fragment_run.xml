<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyGroupsFragment">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="269dp"
        android:layout_height="61dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/layout_border"
        android:fontFamily="open-sans"
        android:gravity="center"
        android:text="Procurar Corrida: "
        android:textColor="#FFA500"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DataCorridaProcuraTextView"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/layout_border"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="Data da Corrida"
        android:inputType="textPersonName"
        android:textColorHint="#FFA500"
        android:textSize="20sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botaoProcurarDatas"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA500"
        android:text="Procurar"
        android:textAllCaps="false"
        android:textColor="@color/whiteLetters"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toEndOf="@+id/DataCorridaProcuraTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443" />

    <TextView
        android:id="@+id/todasAsCorridas"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="open-sans"
        android:gravity="center"
        android:text="Todas as Corridas: "
        android:background="@drawable/layout_border"
        android:textColor="#FFA500"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DataCorridaProcuraTextView"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/todasAsCorridasButtonSearch"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA500"
        android:text="Procurar"
        android:textAllCaps="false"
        android:textColor="@color/whiteLetters"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toEndOf="@+id/todasAsCorridas"
        app:layout_constraintTop_toBottomOf="@+id/botaoProcurarDatas"
        app:layout_constraintVertical_bias="0.156" />
</android.support.constraint.ConstraintLayout>