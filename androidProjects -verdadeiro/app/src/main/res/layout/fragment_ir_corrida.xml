<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".IrCorridaFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="open-sans"
        android:gravity="center"
        android:text="Escolha a dificuldade"
        android:textAlignment="center"
        android:textColor="#FFA500"
        android:textSize="25sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toggleButton2"
        android:background="#FFA500"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textOff="Média: 5 Km"
        android:textOn="Letting go off easy! 200 Points!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton2"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/blackSeparator2IrCorrida"
        android:layout_width="130dp"
        android:layout_height="0.1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#006aff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton3"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toggleButton3"
        android:background="#FFA500"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textOff="Díficil: 7 Km"
        android:textOn="It's a Hard day's life! 500 Points!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton3"
        app:layout_constraintVertical_bias="0.08" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textOff="Fácil: 2 Km"
        android:textOn="Let's Go Easy! 100 Points!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/blackSeparator1IrCorrida"
        android:layout_width="130dp"
        android:layout_height="0.1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#006aff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="215dp"
        android:layout_height="100dp"
        android:background="#FFA500"
        android:fontFamily="sans-serif"
        android:text="Começar"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton4"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/blackSeparator1"
        android:layout_width="270dp"
        android:layout_height="0.1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#006aff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton4"
        app:layout_constraintVertical_bias="0.055" />

</android.support.constraint.ConstraintLayout>