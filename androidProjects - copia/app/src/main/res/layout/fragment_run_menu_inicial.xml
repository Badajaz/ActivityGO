<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329d92"
    tools:context=".RunMenuInicial">

    <Button
        android:id="@+id/buttonIrCorrida"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_border"
        android:fontFamily="sans-serif"
        android:text="Ir Corrida"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.398" />


    <Button
        android:id="@+id/buttonHistorial"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="214dp"
        android:background="@drawable/button_border"
        android:fontFamily="sans-serif"
        android:text="@string/HistoricoCorridas"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonIrCorrida"
        app:layout_constraintVertical_bias="0.398" />

    <TextView
        android:id="@+id/novasNotificacoes"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="194dp"
        android:layout_marginLeft="194dp"
        android:layout_marginTop="490dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_shape"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="  Novos desafios:"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:typeface="sans"
        android:drawableRight="@drawable/bicepeDois"/>

    <TextView
        android:id="@+id/calendario"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="490dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_shape"
        android:drawableRight="@drawable/calendar_icon"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="PrÃ³ximos desafios:"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:typeface="sans" />

</RelativeLayout>