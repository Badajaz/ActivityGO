<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupFragment"
    android:background="#329d92">

    <Button
        android:id="@+id/buttonCriarGrupo"
        android:layout_width="176dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="117dp"
        android:drawableRight="@drawable/run"
        android:gravity="top"
        android:text="Criar Grupo" />

    <Button
        android:id="@+id/buttonJuntarGrupo"
        android:layout_width="176dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/buttonCriarGrupo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="-247dp"
        android:drawableRight="@drawable/groupdois"
        android:gravity="top"
        android:text="Juntar Grupo" />

</RelativeLayout>