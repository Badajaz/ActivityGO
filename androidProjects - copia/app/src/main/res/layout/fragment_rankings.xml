<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329d92"
    tools:context=".RankingsFragment">

    <Button
        android:id="@+id/buttonCorridaGeral"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edit_text_shape"
        android:drawableRight="@drawable/run"
        android:gravity="left|top"
        android:text="Geral Corrida 1/20"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonCorridaGrupo"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@+id/buttonCorridaGeral"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/edit_text_shape"
        android:drawableRight="@drawable/groupdois"
        android:gravity="left|top"
        android:text="Grupo Corrida 3/10"
        android:textSize="18sp"  />

    <Button
        android:id="@+id/buttonCiclismoGeral"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="228dp"
        android:background="@drawable/edit_text_shape"
        android:drawableRight="@drawable/cycling"
        android:gravity="left|top"
        android:text="Geral Ciclismo 1/25"
        android:textSize="18sp"  />

    <Button
        android:id="@+id/buttonCiclismoGrupo"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@+id/buttonCiclismoGeral"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/edit_text_shape"
        android:drawableRight="@drawable/cyclinggroup"
        android:gravity="left|top"
        android:text="Grupo Ciclismo 2/10"
        android:textSize="18sp"  />

</RelativeLayout>