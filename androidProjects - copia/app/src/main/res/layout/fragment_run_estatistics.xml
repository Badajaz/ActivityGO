<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329d92"
    tools:context=".RunEstatisticsFragment">

    <TextView
        android:id="@+id/duracaoEst"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/duracaoValue"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="207dp"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/edit_text_shape"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/dataLabel"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_shape"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/dataValue"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/dataLabel"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shape"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/duracaoValue"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shape"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/distanciaLabel"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/dataLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/edit_text_shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/distanciaValue"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/distanciaLabel"
        android:layout_alignBottom="@+id/distanciaLabel"
        android:layout_marginStart="28dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shape"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/caloriasLabel"
        android:layout_width="152dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/distanciaLabel"
        android:layout_alignEnd="@+id/duracaoEst"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="61dp"
        android:background="@drawable/edit_text_shape"
        android:text="Calorias"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/caloriasValue"
        android:layout_width="148dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/distanciaLabel"
        android:layout_alignEnd="@+id/duracaoValue"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/edit_text_shape"
        android:text="125 kcal"
        android:textAlignment="center"
        android:textSize="25sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/buttonCriarGrupo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/edit_text_shape"
        android:drawableEnd="@drawable/icon_maps"
        android:text="  Percurso:"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans"
       />

</RelativeLayout>