<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329d92"
    tools:context=".RunEstatisticsFragment">

    <TextView
        android:id="@+id/dataLabel"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_shape"
        android:drawableEnd="@drawable/calendar_icon2"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/dataValue"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/dataLabel"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shape4"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/duracaoEst"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/duracaoValue"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-33dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/edit_text_shape"
        android:drawableEnd="@drawable/clock_background"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/duracaoValue"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/dataValue"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shape4"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/distanciaLabel"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/dataLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edit_text_shape"
        android:drawableEnd="@drawable/distance_meter_icon"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/distanciaValue"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/distanciaLabel"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shape4"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/buttonCriarGrupo"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/edit_text_shape"
        android:drawableEnd="@drawable/icon_maps"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:text="Ver o meu percurso:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:typeface="sans" />

</RelativeLayout>